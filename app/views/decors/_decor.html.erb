<div class="card p-3 mb-3 mx-3">
    <div class="d-flex">
        <%  if decor.category.nil? %>
         <%= fa_icon "times", class: "fa-3x" %>
         <% else %>
         <%= fa_icon decor.category.icon, class: "fa-3x" %>
        <% end %>
      <div class="card-body pt-1">
          <div class="d-flex justify-content-between">
              <h5 class="card-title"><%= decor.name%></h5>
              <p class="card-text"><%=number_to_currency(decor.price)%></p>
          </div>
       <p class="mb-0 mt-4"><%= decor.created_at.strftime("%d %B %Y")%></p>
      </div>
  </div>
</div>