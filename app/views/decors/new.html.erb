<% if @decor.errors.any?%>
<ul class="alert alert-warning alert-dismissible fade show rounded-0 mt-1 mx-auto w-50" role="alert">
    <%@decor.errors.full_messages.each do |err|%>
        <li>
            <%=err%>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </li>
    <%end%>
</ul>
<%end%>

<h2 class="text-center">New Decor</h2>
<div class="row justify-content-center">
    <div class="col-4">
        <%= form_with scope: :decor, url: user_decors_path, local: true do |f| %>
             <div class="form-row">
                 <div class="col">
                     <div class="form-group">
                           <%= f.label :name %>
                           <%= f.text_field :name, autofocus: true, autocomplete: 'group name', placeholder: "Decor name" , class: 'form-control' %>
                     </div>
                     <div class="form-group">
                           <%= f.label :price %>
                           <%= f.text_field :price, autofocus: true, autocomplete: 'group name', placeholder: "Decor price" , class: 'form-control' %>
                     </div>
                     <div class="form-group">
                         <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), {include_blank: "Select Category"}, {class: "custom-select mb-1"} %>
                     </div>
                     <div class="form-group">
                          <%= f.submit "New Decor", class: 'btn btn-secondary btn-block' %>
                     </div>
                 </div>
             </div>
        <% end %>
    </div>
</div>