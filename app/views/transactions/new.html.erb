<h2 class="text-center">New Decor</h2>
<div class="row justify-content-center">
    <div class="col-4">
        <%= form_with scope: :transaction, url: user_transactions_path, local: true do |f| %>
             <div class="form-row">
                 <div class="col">
                     <div class="form-group">
                           <%= f.label :name %>
                           <%= f.text_field :name, autofocus: true, autocomplete: 'group name', placeholder: "Decor name" , class: 'form-control' %>
                     </div>
                     <div class="form-group">
                           <%= f.label :amount %>
                           <%= f.text_field :amount, autofocus: true, autocomplete: 'group name', placeholder: "Decor price" , class: 'form-control' %>
                     </div>
                     <!--<div class="form-group">-->
                     <!--    <%= select_tag(:icon, options_for_select(["None", "cutlery", "building", "home", "bath"]), class: "custom-select mb-1") %>-->
                     <!--</div>-->
                     <div class="form-group">
                          <%= f.submit "New Category", class: 'btn btn-secondary btn-block' %>
                     </div>
                 </div>
             </div>
        <% end %>
    </div>
</div>