<div class="d-flex justify-content-between signup-nav text-light align-items-end">
    <%= fa_icon "arrow-left", class: "fa-3x font-weight-light" %>
    <h4 class="font-weight-light">REGISTER</h4>
    <p class="mr-2 mb-1">Next</p>
</div>
<%= render 'layouts/flash' %>

<% if @user.errors.any?%>
<ul class="alert alert-warning alert-dismissible fade show rounded-0 mt-1 ml-2 w-75" role="alert">
    <%@user.errors.full_messages.each do |err|%>
        <li><%=err%>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </li>
    <%end%>
</ul>
<%end%>
<h2 class="text-center">Sign up</h2>
<div class="row justify-content-center">
    <div class="col-4">
        <%= form_with scope: :user, url: users_path, local: true do |f| %>
             <div class="form-row">
                 <div class="col">
                     <div class="form-group">
                           <%= f.label :username %>
                           <%= f.text_field :username, autofocus: true, autocomplete: 'user name', placeholder: "User name" , class: 'form-control' %>
                     </div>
                      <div class="form-group">
                           <%= f.label :Photo %>
                           <%= f.file_field :avatar, class: 'form-control' %>
                     </div>
                     <div class="form-group">
                          <%= f.submit "Sign up", class: 'btn btn-secondary btn-block' %>
                     </div>
                 </div>
             </div>
        <% end %>
        <%= link_to "Login", login_path, class: "btn btn-primary btn-sm" %>
    </div>
</div>

